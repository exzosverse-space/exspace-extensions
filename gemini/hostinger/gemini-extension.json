{
  "name": "hostinger",
  "displayName": "Hostinger - Web Hosting",
  "version": "1.0.0",
  "description": "Integrate Hostinger hosting platform with Gemini CLI. Manage VPS, domains, and deployments with AI assistance.",
  "author": "ExzosVerse-Space",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/exzosverse-space/exspace-extensions.git",
    "directory": "gemini/hostinger"
  },
  "homepage": "https://www.hostinger.com",
  "keywords": [
    "hostinger",
    "hosting",
    "vps",
    "domains",
    "deployment",
    "server"
  ],
  "mcpServers": {
    "hostinger": {
      "command": "npx",
      "args": [
        "-y",
        "hostinger-mcp-server@latest"
      ],
      "cwd": ".",
      "timeout": 30000,
      "trust": false,
      "env": {
        "HOSTINGER_API_KEY": "${HOSTINGER_API_KEY}",
        "HOSTINGER_API_URL": "${HOSTINGER_API_URL:-https://api.hostinger.com}"
      },
      "description": "Hostinger MCP server for VPS and hosting management"
    }
  },
  "contextFiles": [
    "GEMINI.md",
    "README.md"
  ],
  "excludeTools": [],
  "activation": {
    "onInstall": true,
    "onStartup": false,
    "events": ["mcpServerReady"]
  },
  "configuration": {
    "type": "object",
    "properties": {
      "apiKey": {
        "type": "string",
        "default": "",
        "description": "Hostinger API key"
      },
      "apiUrl": {
        "type": "string",
        "default": "https://api.hostinger.com",
        "description": "Hostinger API base URL"
      }
    }
  },
  "dependencies": {
    "node": ">=18.0.0"
  },
  "note": "Requires Hostinger API access. Check API availability at https://www.hostinger.com/api"
}

